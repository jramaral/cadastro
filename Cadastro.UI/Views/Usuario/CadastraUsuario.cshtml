
@using Cadastro.Dominio

@model Cadastro.Dominio.Usuario
@{
    
    var meuModel = DateTime.Now;

    ViewBag.Title = "CadastraUsuario";
}


<div class="container">
    <h2>Cadastro de Usuário</h2>
    @using (Html.BeginForm())
    {
        @Html.ActionLink("Voltar", "Logar", "Usuario", null, new { @class = "btn" })
        <div class="row">
            <div class="column-1">
                <div class="campo">
                    <label>Nome</label>
                    @Html.TextBoxFor(model => Model.Nome, new { maxlength = 70 })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="column">
                <div class="campo">
                    <label>CPF</label>
                    @Html.TextBoxFor(model => Model.Cpf, new { maxlength = 11 })
                </div>
            </div>
            <div class="column">
                <div class="campo">
                    <label>Telefone</label>
                    @Html.TextBoxFor(model => Model.Telefone, new { maxlength = 11 })
                </div>
            </div>
        </div>
               
        <div class="row">
            <div class="column">
                <div class="campo">
                    <label>Gênero</label>
                        @Html.DropDownList("Gênero", new SelectList(Enum.GetValues(typeof(Genero))),"")
                   
                </div>
            </div>
        </div>
        <div class="row">
            <div class="column-1">
                <div class="campo">
                    <label>E-mail</label>
                    @Html.TextBoxFor(model => Model.Email, new { maxlength = 50 })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="column-1">
                <div class="campo">
                    <label>Cidade</label>
                    @Html.DropDownList("Cidade", string.Empty)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="column">
                <div class="campo">
                    <label>Data Cadastro</label>
                    @Html.EditorFor(model => Model.DataCadastro)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="column">
                <div class="campo">
                    <label>Senha</label>
                    @Html.PasswordFor(model => Model.Senha, new { maxlength = 6 })
                </div>
            </div>
        </div>
        <button class="btn submit" type="submit" name="submit">Salvar</button>
    }
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

